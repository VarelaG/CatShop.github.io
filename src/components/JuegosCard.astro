---
interface Props {
    img: string;
    titulo: string;
    precio: string;
    descripcion: string;
}

const { img, titulo, precio, descripcion } = Astro.props;
---
<div class="flex-shrink-0 w-72 bg-white rounded-xl shadow-lg overflow-hidden transform transition-transform hover:scale-105 hover:shadow-xl">
    <div class="relative h-64">
        <img src={img} alt={titulo} class="w-full h-full object-cover object-center">
        <div class="absolute top-2 right-2 bg-yellow-400 text-black px-3 py-1 rounded-full font-bold shadow-md">
            {precio}
        </div>
    </div>
    <div class="p-6">
        <h3 class="text-xl font-bold text-gray-800 mb-3">{titulo}</h3>
        <p class="text-gray-600 text-sm leading-relaxed">{descripcion}</p>
    </div>
</div>
